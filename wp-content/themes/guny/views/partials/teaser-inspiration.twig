{% endblock %#}

{% block tags %}
 {% for term in post.terms('inspiration_group') %}
   <a href="/inspirations/?fwp_inspiration_type={{term.slug}}" class="button--pill">{{term.name}}</a>
 {% endfor %}
{% endblock %}

{% block body %}
