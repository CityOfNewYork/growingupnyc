<div class="c-language-switcher">
  <div class="c-language-switcher__content notranslate" data-js="ls-options">
    <div class="c-language-switcher-controller inline-block flex justify-between pt-6 pb-6">
      <span class="text-left">{{__('Pick a language', 'guny')}}</span>
      <button class="button--text close-language-switcher" data-js="close-language-menu">
        <svg class="icon--small" role="img">
          <title>{{ __('Close Button', 'guny') }}</title>
          <use xlink:href="#icon-close"></use>
        </svg>
      </button>
    </div>
    {% do action('wpml_add_language_selector') %}
  </div>
  <a class="c-language-switcher__translate" data-js='translate'>
    <svg class="" role="img">
      <title>{{__('Languages List Button', 'guny')}}</title>
      <use xlink:href="#icon-translate"></use>
    </svg>
    <span>{{__('Translate', 'guny')}}</span>
  </a>
</div>
{% if machine_translate %}
  <span class="c-language-switcher-logo">
    <svg class="icon--google" role="img">
      <title>{{__('Powered by Google Translate', 'guny')}}</title>
      <use xlink:href="#icon-google-translate"></use>
    </svg>
  </span>
{% endif %}

