{% extends "base.twig" %}

{% block content %}

{# Side Hero #}
<section class="o-static-column o-static-column--left c-side-hero js-sticky" style="background-image:url({{post.thumbnail.src}});">
  <img title="{{site.name}}" alt="{{site.name}}" src="{{post.thumbnail.src|resize(auto, 200)}}">
  <div class="c-side-hero__content">
    <h1 class="c-side-hero__title">
      <span class="c-side-hero__title--small">{{post.get_field('hero_title_top')}}</span>
      {{post.hero_title_bottom}}
    </h1>
    <a href="{{post.hero_button_url}}" class="button--outline button--outline--white">{{post.hero_button_text}}</a>
  </div> <!--/.c-side-hero__content -->
</section> <!-- /.o-static-column.o-static-column--left -->

<section class="o-scroll-column o-scroll-column--right">
  {# Age/Milestone Picker #}
  <ol class="js-accordion c-list-box c-list-box--primary" data-multiselectable="true">
    {% for age_group in age_menu %}
      <li class="c-list-box__item">
        <h3 class="js-accordion__header c-list-box__heading {{age_group|sanitize}}-background" id="homepage-ages-heading-{{loop.index}}">
          {{age_group.name}}
          <span class="c-list-box__subheading">{{age_group.description}}</span>
        </h3>
        <ol class="js-accordion__content c-list-box__content {{age_group|sanitize}}-background" id="homepage-ages-panel-{{loop.index}}">
          {% for post in age_group.posts('numberposts=-1&post_type=age&meta_key=numeric_age&orderby=meta_value_num&order=ASC') %}
            <li class="c-list-box__subitem"><a href="{{post.link}}" class="button--full-width button--primary {{age_group|sanitize}}-text">{{post.title}}</a></li>
          {% endfor %}
        </ol>
      </li>
    {% endfor %}
  </ol>

  <div class="o-content-container o-content-container--shade">
    <h2 class="c-content-tout__heading">Events</h2>
    <div class="o-col__row">
      {% for post in events %}
        <div class="o-col-1">
        {% include ['partials/teaser-'~post.post_type~'.twig', 'partials/teaser.twig'] %}
        </div>
      {% endfor %}
    </div>
    <div class="text-center">
      <a href="/events" class="button--outline button--outline--gray">See all events</a>
    </div>
  </div> <!-- /.c-content-container.c-content-container--shade -->
</section> <!-- /.o-scroll-column.o-scroll-column--right -->

{% endblock %}