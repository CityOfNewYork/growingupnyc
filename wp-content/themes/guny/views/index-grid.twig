{% extends "index.twig" %}

{% block post_list %}
  <div class="small-up-1 medium-up-2 large-up-4 post-grid">
    {% for post in posts %}
      <div class="column">
        {% include ['teaser-'~post.post_type~'.twig', 'teaser.twig'] %}
      </div> <!-- /.column -->
    {% endfor %}
  </div>
{% endblock %}