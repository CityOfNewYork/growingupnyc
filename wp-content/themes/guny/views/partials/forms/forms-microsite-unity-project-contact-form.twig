<div id="mc_embed_signup" class="c-signup-form aligncenter">

<form action="https://twitter.us19.list-manage.com/subscribe/post-json?u=5eda3ff3b81179e054b712d63&amp;id=8cedbd109b&c=?" method="get" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="guny-contact" target="_blank" novalidate>
	<h2 class="text-center">{{post.title}}</h2>
	<p class="text-center">{{post.content}}</p>

  <div class="signup-form__error guny-error"></div>

  <div class="mc-field-group">
		<label for="mce-EMAIL">Email  <span class="asterisk">*</span></label>
    <div class="guny-error-detailed"></div>
    <input type="email" value="" name="EMAIL" class="email form-field signup-form__field-dark" id="mce-EMAIL" required>
	</div>
	
	<div class="mc-field-group">
		<label for="mce-FNAME">First Name  <span class="asterisk">*</span></label>
    <div class="guny-error-detailed"></div>
		<input type="text" value="" name="FNAME" class="form-field signup-form__field-dark" id="mce-FNAME" required>
	</div>

	<div class="mc-field-group">
		<label for="mce-LNAME">Last Name  <span class="asterisk">*</span></label>
    <div class="guny-error-detailed"></div>
		<input type="text" value="" name="LNAME" class="form-field signup-form__field-dark" id="mce-LNAME" required>
	</div>

	<div class="mc-field-group">
		<label for="mce-ZIP">Zip Code  <span class="asterisk">*</span></label>
    <div class="guny-error-detailed"></div>
		<input type="text" value="" name="ZIP" class="form-field signup-form__field-dark" id="mce-ZIP" required>
	</div>

	<div class="mc-field-group">
		<label for="mce-PHONENUM">Phone Number </label>
    <div class="guny-error-detailed"></div>
		<input type="text" name="PHONENUM" class=" form-field signup-form__field-dark" value="" id="mce-PHONENUM" required>
	</div>

	<div class="mc-field-group">
		<label for="mce-MESSAGE">Message (limit 255 characters)  <span class="asterisk">*</span></label>
    <div class="guny-error-detailed"></div>
		<textarea type="text" value="" name="MESSAGE" class="form-field signup-form__field-dark textarea" id="mce-MESSAGE" required></textarea>
		<p class="char-count text-right"></p>
	</div>

	<fieldset class="mc-field-group input-group">
	    <legend>I'd like to: </legend>
	    <div class="guny-error-detailed"></div>
	    <p class="signup-form__checkbox-dark">
	    	<label class="checkbox-dark" for="mce-group[479]-479-0">
		    	<input type="checkbox" value="1" class="checkbox__field-dark" name="group[479][1]" id="mce-group[479]-479-0" required>
          <svg class="checkbox__indicator-dark"><use xlink:href="#icon-check"></use></svg>
          Volunteer
        </label>
      </p>

      <p class="signup-form__checkbox-dark">
	    	<label class="checkbox-dark" for="mce-group[479]-479-1">
		    	<input type="checkbox" value="2" class="checkbox__field-dark" name="group[479][2]" id="mce-group[479]-479-1" required>
          <svg class="checkbox__indicator-dark"><use xlink:href="#icon-check"></use></svg>
          Receive updates
        </label>
      </p>

      <p class="signup-form__checkbox-dark">
	    	<label class="checkbox-dark" for="mce-group[479]-479-2">
		    	<input type="checkbox" value="4" class="checkbox__field-dark" name="group[479][4]" id="mce-group[479]-479-2" required>
          <svg class="checkbox__indicator-dark"><use xlink:href="#icon-check"></use></svg>
          Invite a speaker
        </label>
      </p>

      <p class="signup-form__checkbox-dark">
	    	<label class="checkbox-dark" for="mce-group[479]-479-3">
		    	<input type="checkbox" value="8" class="checkbox__field-dark" name="group[479][8]" id="mce-group[479]-479-3" required>
          <svg class="checkbox__indicator-dark"><use xlink:href="#icon-check"></use></svg>
          Propose a partnership
        </label>
      </p>

      <p class="signup-form__checkbox-dark">
	    	<label class="checkbox-dark" for="mce-group[479]-479-4">
		    	<input type="checkbox" value="8" class="checkbox__field-dark" name="group[479][16]" id="mce-group[479]-479-4" required>
          <svg class="checkbox__indicator-dark"><use xlink:href="#icon-check"></use></svg>
          Make a general inquiry
        </label>
      </p>

		</fieldset>

    <button id="mc-embedded-subscribe" class="signup-form__button button--simple button--simple--alt" type="submit">Submit</button>
  </div>
</form>
</div>
