{% for post in posts %}
  <div class="c-block-list__item{% if not loop.last %} u-sm-gutter{% endif %}">
    {% include ['partials/teaser-'~post.post_type~'.twig', 'partials/teaser.twig'] with {show_post_type: true} %}
  </div>
{% else %}
  <p class="type--no-results">
    {% if not no_results == '' %}
      {{ no_results }}
    {% else %}
      {{ __('Sorry, we didn\'t find any results for that search.<br><br>Please try a different phrase, check for typos, or', 'guny') }} <a href="{% if language == 'es' %}/es/search/{% else %}{{current_url}}{% endif %}?s={{search_term}}">{{ __('reset your filters', 'guny') }}</a>.
    {% endif %}
  </p>
{% endfor %}
