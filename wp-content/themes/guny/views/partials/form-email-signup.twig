    <div id="mc_embed_signup_scroll">
      <h2{% if full_width %} class="text-center"{% endif %}>
        {% if title %}
          {{ title }} {# translation comes from page content #}
        {% else %}
          {{ __('Get Updates', 'GUNY-Email-Signup') }}
        {% endif %}
      </h2>
      {# EMAIL #}
      <div class="mc-field-group signup-form__input {% if full_width %}signup-form__input--full{% else %}signup-form__input--long{% endif %}">
        <label for="mce-EMAIL" class="signup-form__label">
          <span class="signup-form__label-content" data-content="Email">{{ __('Email', 'GUNY-Email-Signup') }}</span>
        </label>
        <input type="email" value="" name="EMAIL" class="email form-field signup-form__field" id="mce-EMAIL">
