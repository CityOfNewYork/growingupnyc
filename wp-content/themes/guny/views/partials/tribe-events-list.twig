{# Pager #}
<h2 class="arrow-pager">
  {% if prev_month_url %}
  <a class="arrow-pager__arrow arrow-pager__arrow--left" href="{{prev_month_url}}" rel="prev">
    <svg role="img" class="icon--xsmall"><title>Previous Month</title><use xlink:href="#caret-left"></use></svg>
  </a>
  {% endif %}
  {{current_month_text}}
  {% if next_month_url %}
  <a class="arrow-pager__arrow arrow-pager__arrow--right" href="{{next_month_url}}" rel="next">
    <svg role="img" class="icon--xsmall"><title>Next Month</title><use xlink:href="#caret-right"></use></svg>
  </a>
  {% endif %}
</h2>

{# Event List #}
{% for event in event_list %}
  <section class="c-block-list c-block-list--shade o-content-container u-sm-gutter">
    <h3>{{ event.date_header }}</h3>

    {% for post in event.posts %}
      <div class="c-block-list__item">
        {% include ['partials/teaser-'~post.post_type~'.twig', 'partials/teaser.twig'] %}
      </div>
    {% endfor %}
  </section> <!-- /.c-block-list.c-block-list--shade.o-content-container.o-content-container--narrow.u-sm-gutter -->
{% else %}
  <section class="c-block-list c-block-list--shade o-content-container o-content-container--narrow u-sm-gutter">
    <p class="type--no-results">Sorry, we couldnâ€™t find anything matching your search. <a href="/events">Clear filters</a></p>
  </section> <!-- /.c-block-list.c-block-list--shade.o-content-container.o-content-container--narrow.u-sm-gutter -->
{% endfor %}
