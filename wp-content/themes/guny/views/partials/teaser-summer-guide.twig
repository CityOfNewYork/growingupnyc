{% extends 'partials/teaser.twig' %}

{% block classes %}c-card--subtitle-first{% endblock %}
{% block classes_sticker %}bg-pure-orange{% endblock %}

{% block sticker_content %}
  <svg aria-hidden="true" class="icon--large"><use xlink:href="#icon-summer-guides"></use></svg>
{% endblock %}

{% block subtitle %}
  {{ function('SummerGuides\\get_dates') }}
{% endblock %}

{% block tags_block %}

  {% if post.cta_href %}
  <a class="c-card__cta" href="{{ post.cta_href }}" {% if post.cta_new_window %}target="_blank" rel="nofollow"{% endif %}>
    {{ post.cta_title }}
  </a>
  {% endif %}

  <div class="c-card__tags">
  {% for key, value in taxonomies %}
    {% for term in post.terms(key) %}

      {% if translated_ids %}
        {% set id = function('Wpml\\get_translated_term_id', term.ID, key) %}
      {% else %}
        {% set id = term.ID %}
      {% endif %}

      <a class="button--pill bg-vivid-orange hover:bg-pure-orange" href="?{{ key }}={{ id }}">
        {{ term.name }}
      </a>

    {% endfor %}
  {% endfor %}
  </div>

{% endblock %}

{% block link %}

  <p class="c-card__link">
    <svg role="img" class="icon--xxsmall">
      <use xlink:href="#icon-map-marker"></use>
    </svg>
    <span>
      {{ function('SummerGuides\\get_location_description') }}
    </span>
  </p>

{% endblock %}

{% block body %}
  {{ post.post_excerpt ? post.post_excerpt : post.summary|excerpt(15) }}
{% endblock %}
