        <label for="mce-ZIP" class="signup-form__label">
          <span class="signup-form__label-content" data-content="Zip code">{{ __('Zip code', 'GUNY-Email-Signup') }}</span>
        </label>
        <input name="ZIP" id="mce-ZIP" type="tel" class="form-field signup-form__field">
      </div>

      {# checkboxes #}
      <fieldset class="mc-field-group input-group signup-form__fieldset">
        <legend>{{ __('I would like to receive updates for:', 'GUNY-Email-Signup') }}</legend>

        <span class="signup-form__checkbox">
