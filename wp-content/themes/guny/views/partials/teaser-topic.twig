{% extends "partials/teaser.twig" %}

{% block classes %}{{is_first ? "c-card--hero #{age_group.slug|sanitize|replace({'-es':''})}-gradient"}}{% endblock %}

{% block sticker %}
  {% set category = post.terms('topic_group')|first %}
  {% if category %}
    <div class="c-card__sticker sticker" aria-hidden="true">
      <svg class="icon--large"><title>{{category.name}}</title><use xlink:href="#{{category.slug|replace({'-es':''})}}"></use></svg>
    </div>
  {% endif %}
{% endblock %}

{% block subtitle %}
  <p><strong>{{post.program_name}}{% if post.acronym %} ({{post.acronym}}){% endif %}</strong></p>
  <p>{{post.government_agency}}</p>
{% endblock %}

{% block tags %}
  {% for term in post.terms('topic_group') %}
    <a href="/topics/?fwp_topic_type={{term.slug}}" class="button--pill">{{term.name}}</a>
  {% endfor %}
  {% for term in post.terms('resources_for') %}
    <a href="/topics/?fwp_topic_type={{term.slug}}" class="button--pill">{{term.name}}</a>
  {% endfor %}
  {% for term in post.terms('becoming_an_adult') %}
    <a href="/topics/?fwp_becoming_an_adult={{term.slug}}" class="button--pill">{{term.name}}</a>
  {% endfor %}
  {% for term in post.terms('counseling') %}
    <a href="/topics/?fwp_counseling={{term.slug}}" class="button--pill">{{term.name}}</a>
  {% endfor %}
  {% for term in post.terms('Going_to_school') %}
    <a href="/topics/?fwp_going_to_school={{term.slug}}" class="button--pill">{{term.name}}</a>
  {% endfor %}
  {% for term in post.terms('staying_healthy') %}
    <a href="/topics/?fwp_staying_healthy={{term.slug}}" class="button--pill">{{term.name}}</a>
  {% endfor %}
  {% for term in post.terms('working') %}
    <a href="/topics/?fwp_working={{term.slug}}" class="button--pill">{{term.name}}</a>
  {% endfor %}
  {% for term in post.terms('budgeting_and_finance') %}
    <a href="/topics/?fwp_budget_finance={{term.slug}}" class="button--pill">{{term.name}}</a>
  {% endfor %}
{% endblock %}

