<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <link rel="icon" type="image/x-icon" href="{{theme.path}}/favicon.ico">

  <link rel="stylesheet" href="{{theme.path}}/style.css" type="text/css" media="screen">
  {{function('wp_head')}}
</head>

<body class="{{body_class}}" data-template="base.twig">
  <div class="o-offcanvas">
    <a href="#main" class="show-for-keyboard">Skip to main content</a>
    <nav id="ages" role="navigation" aria-labelledby="ages-heading">
      <h2 id="ages-heading">Resources by Age</h2>
      <ol>
        {% for age_group in age_menu %}
          <li>
            {{age_group.name}}
            <ul>
              {% for post in age_group.posts('numberposts=-1&post_type=age&orderby=title') %}
                <li><a href="{{post.link}}">{{post.title}}</a></li>
              {% endfor %}
            </ul>
          </li>
        {% endfor %}
      </ol>
    </nav>

    {% block header %}
      <header>
        <h1><a href="{{site.url}}">{{site.name}}</a></h1>
        <nav role="navigation" role="navigation" aria-label="Primary">
          <a href="#ages">Ages</a>
        </nav>
        <form action="/" method="get" class="js-global-search">
          <label for="fwp-search">Search<label>
          <input type="text" name="s" placeholder="Search" id="search">
          <button type="submit">Submit</button>
        </form>
      </header>
    {% endblock %}

    <main id="main" role="main">
      {% block content %}
        <section class="post-list small-12 columns">
          <p>Sorry, no entries match your criteria</p>
        </section> <!-- /.post-list.small-12.columns -->
        {% endblock %}
    </main> <!-- /#main -->

    <hr>
    <footer class="site-footer" role="contentinfo">
      {% include 'footer.twig' %}
    </footer> <!-- /.site-footer -->
  </div> <!-- /.o-offcanvas -->

  {{wp_footer}}
</body>