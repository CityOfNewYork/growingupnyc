{% extends "microsite-list.twig" %}

{% block head_extras %}
<style>
  .c-hero { background-color: #2793E0; background-image: url(/wp-content/themes/guny/assets/img/hero-program-landing.svg); }
</style>
{% endblock %}

{% block hero %}
<div class="js-parallax">
  <header class="c-hero js-parallax-content">
    <div class="o-container js-parallax-text">
      <h1 class="c-hero__title">{{options.topic_landing_title}}</h1>
      <p class="c-hero__tagline">{{options.topic_landing_tagline}}</p>
    </div>
  </header>
</div>
{% endblock %}

{% block list_sidebar %}
<ol class="c-list-box c-list-box--quaternary facetwp-guny" data-multiselectable="false">
  {{facet_topic_type}}
  {# {{facet_ages}} #}
</ol>
{% endblock %}

{% block post_list %}
<section class="c-block-list c-block-list--shade o-content-container u-sm-gutter">
  {{posts}}
</section>
{% endblock %}

{% block after_list %}
<div class="o-content-container--compact">
  {{pagination}}
</div>
{% endblock %}
