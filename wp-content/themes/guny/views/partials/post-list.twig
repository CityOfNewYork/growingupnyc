{% for post in posts %}
  <div class="c-block-list__item{% if not loop.last %} u-sm-gutter{% endif %}">
    {% include ['partials/teaser-'~post.post_type~'.twig', 'partials/teaser.twig'] with {show_post_type: true} %}
  </div>
{% else %}
  <p class="type--no-results">
    {{ __('Sorry, we didn\'t find any results for that search.<br><br>Please try a different phrase, check for typos, or', 'guny') }} <a href="{% if language == 'es' %}/es{% endif %}/search/?s={{search_term}}">{{ __('reset your filters', 'guny') }}</a>.
  </p>
{% endfor %}
