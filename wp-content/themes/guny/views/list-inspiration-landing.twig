{% extends "microsite-list.twig" %}

{% block head_extras %}
<style>
  .c-hero-ms__inspiration { background-color: #144f82; background-image: url(/wp-content/themes/guny/assets/img/hero-inspiration-landing.svg); }
</style>
{% endblock %}

{% block hero %}
<div class="js-parallax">
  <header class="c-hero c-hero-ms c-hero-ms__inspiration js-parallax-content">
    <div class="o-container js-parallax-text">
      <h1 class="c-hero__title">{{options.inspiration_landing_title}}</h1>
      <p class="c-hero__tagline">{{options.inspiration_landing_tagline}}</p>
    </div>
  </header>
</div>
{% endblock %}

{% block classes %}
js-sticky-container
{% endblock %}

{% block list_sidebar %}
<div class="o-content-container--compact">
  <ol class="c-nav-list c-nav-list-ms c-nav-list-ms__trips js-sticky js-section-set o-sticky-nav">
    <li class="c-nav-list__item">
      <a href="#free-day-trips" data-section="free-day-trips" class="js-section c-nav-list__link">Featured Inspiration<svg aria-hidden="true" class="icon--caret"><use xlink:href="#caret-right"></use></svg></a>
    </li>
    <li class="c-nav-list__item">
      <a href="#free-this-week" data-section="free-this-week" class="js-section c-nav-list__link">Other Inspirations<svg aria-hidden="true" class="icon--caret"><use xlink:href="#caret-right"></use></svg></a>
    </li>
  </ol>
</div> <!-- /.o-content-container-compact -->
{% endblock %}

{% block post_list %}
  
  {% for post in featuredposts %}
    {% include ['partials/teaser-featured-'~post.post_type~'.twig', 'partials/microsite-teaser.twig'] %}
  {% endfor %}

<section class="c-block-list c-block-list-inspiration c-block-list--shade o-content-container u-sm-gutter">
  {% for post in posts %}
    {% include ['partials/teaser-'~post.post_type~'.twig', 'partials/microsite-teaser.twig'] %}
  {% endfor %}
</section>
{% endblock %}

{% block after_list %}
<div class="o-content-container--compact">
  {{pagination}}
</div>
{% endblock %}