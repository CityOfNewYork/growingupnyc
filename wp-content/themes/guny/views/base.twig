<body class="{{body_class}}" data-template="base.twig">
  {% include 'partials/svg-sprite.twig' %}
  <div class="o-offcanvas js-offcanvas" id="offcanvas-ages">
    <a href="#main" class="show-for-keyboard">Skip to main content</a>
    <nav class="o-offcanvas__side js-offcanvas__side" id="ages" role="navigation" aria-label="ages-heading">
      <h2 id="ages-heading" class="show-for-screen-reader">Resources by Age</h2>
      <button data-toggle="offcanvas-ages" class="o-offcanvas__close button--text"><svg class="icon--small" role="img"><title>Close Resources by Age</title><use xlink:href="#close"></use></svg></button>
      <ol class="js-accordion c-list-box c-list-box--secondary" data-multiselectable="true">
        {% for age_group in age_menu %}
          <li class="c-list-box__item">
            <h3 class="js-accordion__header c-list-box__heading" id="ages-heading-{{loop.index}}">{{age_group.name}}</h3>
            <ol class="js-accordion__content c-list-box__content" id="ages-panel-{{loop.index}}">
              {% for post in age_group.posts('numberposts=-1&post_type=age&meta_key=numeric_age&orderby=meta_value_num&order=ASC') %}
                <li><a href="{{post.link}}" class="c-list-box__subitem">{{post.title}}</a></li>
              {% endfor %}
            </ol>
          </li>
        {% endfor %}
      </ol>
    </nav>

    <div class="o-offcanvas__main">
      {% block header %}
        <header class="c-banner">
          <div class="o-layout">
            <a href="{{site.url}}" class="c-banner__logo-wrapper"><span class="c-banner__logo">{{site.name}}</span></a>
            <nav class="c-banner__nav" role="navigation" aria-label="Primary">
              <ul class="o-inline">
                {% for menu_item in menu.get_items %}
                  <li class="o-inline__item"><a href="{{menu_item.link}}" class="c-banner__link">{{menu_item.title}}</a></li>
                {% endfor %}
                <li class="o-inline__item"><a href="#ages" data-toggle="offcanvas-ages" class="c-banner__link">Ages</a></li>
                <li class="o-inline__item">
                  <a class="c-banner__link" href="#search" data-toggle="overlay-search">
                    <svg class="c-banner__icon c-banner__icon__search" role="img"><title>Search</title><use xlink:href="#search"></use></svg>
                    <svg class="c-banner__icon c-banner__icon__close" role="img"><title>Search</title><use xlink:href="#close"></use></svg>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
        </header>
        <section class="o-overlay js-overlay" id="overlay-search">
          <div class="o-layout-med">
            <form action="/" method="get" class="form-field__icon-container">
              <label for="fwp-search" class="show-for-screen-reader">Search</label>
              <input type="search" name="s" placeholder="Search" class="form-field form-field--large form-field--full-width" id="fwp-search">
              <button type="submit" class="form-field__icon form-field__icon--large"><svg role="img"><title>Search</title><use xlink:href="#search"></use></svg></button>
            </form>

            <section class="o-col__divider">
              <h2 class="c-content-tout__heading--small">
                Programs
                <a class="c-content-tout__link" href="{{site.url}}/programs">See all programs<svg role="img" class="icon--xsmall"><use xlink:href="#caret-right"></use></svg></a>
              </h2> <!-- /.c-content-tout__heading--small -->
              <div class="o-col__row">
                {{top_programs}}
              </div> <!-- /.o-col__divider -->
            </section> <!-- /.c-content-tout -->

            <section class="o-col__divider">
              <h2 class="c-content-tout__heading--small">
                Events
                <a class="c-content-tout__link" href="{{site.url}}/events">See all events<svg role="img" class="icon--xsmall"><use xlink:href="#caret-right"></use></svg></a>
              </h2> <!-- /.c-content-tout__heading--small -->
              <div class="o-col__row">
              {% for event in top_events %}
                <div class="o-col-3 c-content-tout">
                  <a class="c-content-tout__title" href="{{event.path}}">{{event.post_title}}</a>
                  <p class="c-content-tout__subtitle c-event-listing__date">
                    {{event.start_date_formatted}}
                    {% if not event.all_day %}
                      <svg role="img" class="icon--xsmall"><title>Time:</title><use xlink:href="#clock-o"></use></svg>
                      <span class="nowrap">{{event.start_datetime|date('g:i A')}}</span>
                      {% if not event.multiday and event.end_datetime != event.start_datetime %}
                        - <span class="nowrap">{{event.end_datetime|date('g:i A')}}</span>
                      {% endif %}
                    {% endif %}
                    {% if event.multiday %}
                      - {{event.end_date_formatted}}
                      {% if not event.all_day and event.end_datetime %}
                        <svg role="img" class="icon--xsmall"><title>Time:</title><use xlink:href="#clock-o"></use></svg>
                        <span class="nowrap">{{event.end_datetime|date('g:i A')}}</span>
                      {% endif %}
                    {% endif %}
                  </p> <!-- /.c-content-tout__subtitle.c-event-listing__date -->
                  {% if event.venue %}
                    <svg role="img" class="icon--xsmall"><use xlink:href="#map-marker"></use></svg>
                    <a class="c-event-listing__link"
                      href="https://maps.google.com?q={{event.venue_address.address|url_encode}},+{{event.venue_address.city}},+{{event.venue_address.region}}+{{event.venue_address.zip}},+{{event.venue_address.country}}"
                      target="_blank">
                      {{event.venue}},
                      {% for borough in event.terms('borough') %}
                        {{borough.name}}
                      {% endfor %}
                    </a> <!-- /.c-event-listing__link -->
                  {% endif %}
                </div> <!-- /.o-col-3.c-content-tout -->
              {% endfor %}
              </div> <!-- /.o-col__row -->
            </section> <!-- /.o-col__divider -->
          </div> <!-- /.o-layout-med -->
        </section> <!-- /.o-overlay -->
      {% endblock %}

      <main id="main" role="main">
        {% block content %}
          <section class="post-list small-12 columns">
            <p>Sorry, no entries match your criteria</p>
          </section> <!-- /.post-list.small-12.columns -->
        {% endblock %}
      </main> <!-- /#main -->

      <footer class="c-footer" role="contentinfo">
        <div class="o-layout">
          <img class="c-footer__logo" alt="Growing Up NYC" src="{{theme.link}}/assets/img/GrowingUpNYC-logo-white.gif">
          <nav role="navigation" class="c-footer__nav" aria-label="Secondary">
            <ul class="c-footer__column">
              <li class="c-footer__nav-item"><a class="c-footer__link" href="{{site.url}}">Home</a></li>
              {% for menu_item in menu.get_items %}
                <li class="c-footer__nav-item"><a class="c-footer__link" href="{{menu_item.link}}">{{menu_item.title}}</a></li>
              {% endfor %}
            </ul>
            <ul class="c-footer__column">
              {% for menu_item in footer_menu.get_items %}
                <li class="c-footer__nav-item"><a class="c-footer__link" href="{{menu_item.link}}" target="_blank">{{menu_item.title}}</a></li>
              {% endfor %}
            </ul>
          </nav>
          {{footer_widgets}}
        </div> <!-- /.o-layout -->
      </footer> <!-- /.c-footer -->
      <a class="o-offcanvas__overlay" data-toggle="offcanvas-ages" aria-hidden="true"></a>
    </div> <!-- /.o-offcanvas__main -->
  </div> <!-- /.o-offcanvas -->

  {{wp_footer}}
</body>