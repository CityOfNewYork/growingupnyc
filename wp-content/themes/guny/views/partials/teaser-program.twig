{% extends "partials/teaser.twig" %}

{% block classes %}{{is_first ? "c-card--hero #{age_group|sanitize}-gradient"}}{% endblock %}

{% block sticker_content %}
  <svg class="icon--large"><title>Book</title><use xlink:href="#book"></use></svg>
{% endblock %}

{% block subtitle %}
  <p><strong>{{post.program_name}}{% if post.acronym %} ({{post.acronym}}){% endif %}</strong></p>
  <p>{{post.government_agency}}</p>
{% endblock %}

{% block tags %}
  {% for term in post.terms('programs_cat') %}
    <a href="{{term.link}}" class="button--pill">{{term.name}}</a>
  {% endfor %}
  {% for term in post.terms('age_group') %}
    <a href="{{term.link}}" class="button--pill button--pill--alt">{{term.name}}</a>
  {% endfor %}
{% endblock %}
