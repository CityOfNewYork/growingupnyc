<div class="c-card">
  <div class="c-card__sticker" aria-hidden="true">
    {{post.start_date_formatted}}
  </div>
  <h3 class="c-card__title">
    <a href="{{post.link}}" title="{{post.title}}" rel="bookmark">
      {{post.title}}
    </a>
  </h3>
  <div class="c-card__subtitle">
    {% embed "partials/event-date.twig" %}
      {% block startDate %}
      {% endblock %}
    {% endembed %}
  </div>
  <div class="c-card__tags">
    {% for term in post.terms('tribe_events_cat') %}
      <a href="{{term.link}}" class="button--pill">{{term.name}}</a>
    {% endfor %}
    {% for term in post.terms('age_group') %}
      <a href="{{term.link}}" class="button--pill button--pill--alt">{{term.name}}</a>
    {% endfor %}
  </div>
  <div class="c-card__body">
    {{post.post_content|excerpt(15)}}
  </div>
  {% if post.venue %}
    <p class="c-card__link">
      {% include 'partials/event-link.twig' %}
    </p>
  {% endif %}
</div>
