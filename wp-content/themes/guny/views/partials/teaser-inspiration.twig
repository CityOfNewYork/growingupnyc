{% extends "partials/teaser.twig" %}

{% block classes %}{{is_first}}{% endblock %}

{% block title %}
	<a href="{{post.link}}" title="{{post.title}}" rel="bookmark">
    	{{post.prof_name}}, {{post.prof_age}}
    </a>
{% endblock %}

{% block sticker %}
 {% set category = post.terms('inspiration_group')|first %}
   <div class="c-card__sticker sticker" aria-hidden="true" style="background: url({{post.get_field('prof_img').url}}) center center no-repeat;"></div>
{% endblock %}

{#% block subtitle %}
 <p><strong>{{post.program_name}}{% if post.acronym %} ({{post.acronym}}){% endif %}</strong></p>
